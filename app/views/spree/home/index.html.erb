<% content_for :sidebar do %>
  <%= render "spree/shared/taxonomies" %>
<% end %>

<% @taxons.each do |taxon| %>
  <div class="taxon">
    <h2><%= taxon.name %></h2>

    <%= render :partial => "spree/shared/products", :locals => {:products => taxon_preview(taxon, 6), :taxon => taxon} %>
  </div>
<% end %>
